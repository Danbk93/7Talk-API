                </li>
              -->
            </ul>
        </form>
    </div>
    </div>
    <script>
        (function loadChatroom(){
          var roomJson = JSON.stringify(<%-data%>);
          var roomObject = JSON.parse(roomJson);
          console.log(roomObject);

          var data = roomObject.data;

          var chatlist = document.getElementById('chatlist');

          chatlist.childNodes[0].nodeValue = data.roomName;

          for(var i = 0; i < roomObject.data.length; i++){
            //console.log(roomObject.data[i].roomName);
            var li = document.createElement('li');
            li.setAttribute('id', 'chatroom');
            var node = document.createElement('a');
            node.setAttribute('href', '/chatting/chat/' + data[i].roomName)


            var text = document.createTextNode(data[i].roomName);
            node.appendChild(text);
            li.appendChild(node);


            chatlist.appendChild(li);
          }
        })();
    </script>
    <script src="/js/chatroom.js"></script>
</body>

</html>
