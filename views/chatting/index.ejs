<!DOCTYPE html>
<html lang="en">
  <head>
    <% include ../partial/head.ejs %>

    <style type="text/css">
      a:link { color: red; text-decoration: none;}
      a:visited { color: black; text-decoration: none;}
      a:hover { color: blue; text-decoration: underline;}
    </style>

    <!-- Scripts
    –––––––––––––––––––––––––––––––––––––––––––––––––– -->
    <script src="//ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
    <script src="https://cdn.socket.io/socket.io-1.4.5.js"></script>
  </head>
  <body>
    <script>
    	var socket = io.connect({transports: ['websocket']});
/*
    	// on connection to server, ask for user's name with an anonymous callback
    	socket.on('connect', function(){
    		// call the server-side function 'adduser' and send one parameter (value of prompt)
    		socket.emit('adduser', prompt("What's your name?"));
    	});
*/
      roomName = '<%= topicName %>';

      socket.emit('chooseRoom', roomName);

    	// listener, whenever the server emits 'updateChat', this updates the chat body
    	socket.on('updateChat', function (data) {
        $('#conversation').append('<b>' + data.message + '</b><br>');
    	});

    	// on load of page
    	$(function(){
    		// when the client clicks SEND
    		$('#datasend').click( function() {
    			var message = $('#data').val();
    			$('#data').val('');
    			// tell server to execute 'sendchat' and send along one parameter
          var dataObject = new Object({});

          dataObject.topicName = '<%=topicName%>';
          dataObject.message = message;


    			socket.emit('message', dataObject);

          $('#conversation').append('<b>' + dataObject.message + '</b><br>');
    		});

    		// when the client hits ENTER on their keyboard
    		$('#data').keypress(function(e) {
    			if(e.which == 13) {
    				$(this).blur();
    				$('#datasend').focus().click();
    			}
    		});
    	});

    </script>
    <div class="container">
      <div id="rooms">
        <h3>채팅방</h3>
      </div>
    </div>
    <div class="chatting">
      <div class="container">
        <h5><%=topicName%></h5>
        <hr/>
        <div class= "window">
          <div class="one-third column value" style= "border-right:1px solid black;">
          </div>
        <!--<div style="float:left;width:500px;height:250px;overflow:scroll-y;padding:10px;">-->

          <div class="one-thirds column value" id="conversation"></div>
          <div id="chat">
          <input type="button" id="datasend" value="send" />
            <input type="text" autofocus autocomplete="on" id="data" style="width:200px;margin-top:200px;" />
          </div>
        </div>
      </div>
    </div>
  </body>
</html>
